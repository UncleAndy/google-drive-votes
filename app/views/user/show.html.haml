%h2.center= I18n.t("titles.user_cabinet")
%ol.breadcrumb.center
  %li
    = link_to I18n.t("titles.home"), root_path
%p.input-group
  %span.input-group-addon
    = I18n.t("your.nick")
  %input.form-control{ :value => @nick, :readonly => true, :style => 'text-align: center;' }
  %span.input-group-addon
    = I18n.t("your.nick")
%p.input-group
  %span.input-group-addon
    = I18n.t("your.idhash")
  %input.form-control{ :value => @idhash, :readonly => true, :style => 'text-align: center;' }
  %span.input-group-addon
    = I18n.t("your.idhash")
%p.input-group
  %span.input-group-addon
    = I18n.t("your.doc_key")
  %input.form-control{ :value => @doc_key, :readonly => true, :style => 'text-align: center;' }
  %span.input-group-addon
    = I18n.t("your.doc_key")
%p.center
  = link_to new_user_path do
    %button.btn.btn-success= I18n.t("titles.change_identify")
%br
.center
  = simple_form_for :user, :url => user_path, :method => :put, :html => {:autocomplete => "off"} do |f|
    %table.invis.wide
      %tr
        %td.right{:width=>'50%'}= I18n.t("simple_form.labels.defaults.emails")
        %td.left= f.input_field :emails, required: false
      %tr
        %td.right{:width=>'50%'}= I18n.t("simple_form.labels.defaults.skype")
        %td.left= f.input_field :skype, required: false
      %tr
        %td.right{:width=>'50%'}= I18n.t("simple_form.labels.defaults.icq")
        %td.left= f.input_field :icq, required: false
      %tr
        %td.right{:width=>'50%'}= I18n.t("simple_form.labels.defaults.jabber")
        %td.left= f.input_field :jabber, required: false
      %tr
        %td.right{:width=>'50%'}= I18n.t("simple_form.labels.defaults.phones")
        %td.left= f.input_field :phones, required: false
      %tr
        %td.right{:width=>'50%'}= I18n.t("simple_form.labels.defaults.facebook")
        %td.left= f.input_field :facebook, required: false
      %tr
        %td.right{:width=>'50%'}= I18n.t("simple_form.labels.defaults.vk")
        %td.left= f.input_field :vk, required: false
      %tr
        %td.right{:width=>'50%'}= I18n.t("simple_form.labels.defaults.odnoklassniki")
        %td.left= f.input_field :odnoklassniki, required: false
      %tr
        %td{:colspan => 2}
          = f.button :submit, "Обновить контактные данные", :class => 'btn btn-success'
%br

%table.invis{:align => 'center'}
  %tr
    %td{:width => '33%'}
      = link_to user_verify_votes_path do
        %button.btn.btn-success.btn-lg.wide= I18n.t("titles.user_verify_votes")
    %td{:width => '33%'}
      = link_to user_trust_votes_path do
        %button.btn.btn-success.btn-lg.wide= I18n.t("titles.user_trust_votes")
    %td{:width => '33%'}
      = link_to user_property_votes_path do
        %button.btn.btn-success.btn-lg.wide= I18n.t("titles.user_property_votes")
  %tr
    %td
      = link_to verify_to_user_verify_votes_path do
        %button.btn.btn-info.btn-lg.wide= I18n.t("titles.to_user_verify_votes")
    %td
      = link_to trust_to_user_trust_votes_path do
        %button.btn.btn-info.btn-lg.wide= I18n.t("titles.to_user_trust_votes")
    %td
      = link_to property_to_user_property_votes_path do
        %button.btn.btn-info.btn-lg.wide= I18n.t("titles.to_user_property_votes")
