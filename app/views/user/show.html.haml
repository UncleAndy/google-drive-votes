%h2.center= I18n.t("titles.user_cabinet")
%h3.center
  = link_to I18n.t("titles.home"), root_path
%p.input-group
  %span.input-group-addon
    = I18n.t("your.idhash")
  %input.form-control{ :value => @user_idhash, :readonly => true, :style => 'text-align: center;' }
  %span.input-group-addon
    = I18n.t("your.idhash")
%p.input-group
  %span.input-group-addon
    = I18n.t("your.doc_key")
  %input.form-control{ :value => @user_doc.key, :readonly => true, :style => 'text-align: center;' }
  %span.input-group-addon
    = I18n.t("your.doc_key")
%br
.center
  = simple_form_for :user, :url => user_path, :method => :put, :html => {:autocomplete => "off"} do |f|
    = f.input :emails, required: false
    = f.input :skype, required: false
    = f.input :icq, required: false
    = f.input :jabber, required: false
    = f.input :phones, required: false
    = f.button :submit, "Обновить контактные данные", :class => 'btn btn-success'
%br

%p{ :align => 'center' }
  = link_to user_trust_votes_path do
    %button.btn.btn-primary.btn-lg= I18n.t("titles.user_trust_votes")
/
  %p{ :align => 'center' }
    = link_to '#' do
      %button.btn.btn-default.btn-lg= I18n.t("titles.user_poll_votes")
  %p{ :align => 'center' }
    = link_to '#' do
      %button.btn.btn-default.btn-lg= I18n.t("titles.user_votes")
